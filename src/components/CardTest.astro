---
export interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="parent">
  <!-- Background sibling element -->
  <div class="background"></div>
  
  <!-- Main content -->
  <div class="child">
    <h2>{title}</h2>
    <p>{body}</p>
  </div>
</li>

<style>
  .parent {
    position: relative;
    padding: 1rem;
    width: 400px;
    height: 200px;
    background-color: #f2f2f2;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Background sibling to the content, hidden by default */
  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: var(--accent-gradient);
    background-size: cover;
    background-position: center;
    opacity: 0; /* Hidden by default */
    border-radius: inherit;
    z-index: 0; /* Positioned behind the child */
    transition: opacity 0.3s ease; /* Smooth transition for opacity */
  }

  /* Show background on hover */
  .parent:hover .background {
    opacity: 1; /* Make background visible on hover */
  }

  .child {
    z-index: 1;
    color: black;
    position: relative; /* Positioned above the background */
    border: 1px solid red;
    /* background-color: turquoise; */
    background:#f2f2f2
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  p {
    margin-top: 0.5rem;
    font-size: 1rem;
  }
</style>
