<style is:global>
  * {
    box-sizing: border-box;
  }

  :root {
    --accent: 96, 38, 174;
    --accent-light: 224, 204, 250;
    --accent-dark: 39, 5, 80;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent-dark)),
